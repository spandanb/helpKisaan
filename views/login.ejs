<html>
    <head>    
        <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">    
    </head>
    <body>
        <h1>Sign In</h1>
        <img class='profile-img' src="/images/user.png"></img>
        <form class="form-signin action="/login" method=POST>
            <input type="text" name="username" class="form-control" placeholder="Email" required autofocus></input>
	    <input type="password" name="password" class="form-control" placeholder="Password" required></input>
            <button class="btn btn-lg btn-primary btn-block" type='submit'>Sign in</button>
        </form>
        <a href="/signup" class="text-center new-account">Create an Account</a>
        
    </body>
</html>

